@using System.Data
@model DataSet
@{
    ViewBag.Title = "Admin Profile";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        hplm.departmentMasterOnLoad();
    });
</script>

<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">
        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/home/dashboard">Home</a>
                <i class="fa fa-angle-right"></i>
                <span>Create Departments</span>
            </h2>
        </div>
        <!--//banner-->
        <!--content-->
        <div class="blank">
            <div class="blank-page">
                @using (Html.BeginForm("managedepartmentmaster", "admin", FormMethod.Post, new { enctype = "multipart/form-data", @id = "manage-department-form" }))
                {
                    <div class="col-lg-12"><p style="color:#ef0f44;text-align:center">@ViewBag.Msg</p></div>
                    <div class="clearfix"></div>
                    <input type="hidden" name="DepartmentId" id="DepartmentId" value="0" />
                    <div class="col-md-4 form-group">
                        Select Hospital :
                        <select id="HospitalList" name="HospitalList" class="form-control" required>
                            <option value="0">Select Type</option>
                            @foreach (DataRow hospitalList in Model.Tables[1].Rows)
                            {
                                <option value="@hospitalList.ItemArray[0]">@hospitalList.ItemArray[1]</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 form-group">
                        Department Name :
                        <input type="text" name="DepartmentName" id="DepartmentName" class="form-control" placeholder="Enter Department Name" required />
                    </div>
                    <div class="col-lg-4 form-group">
                        <br />
                        <button type="submit" name="btnSubmit" id="btnSubmit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
            <div class="blank-page">
                <div id="departmentMasterList"></div>
            </div>
        </div>
        <!--//content-->
        <!---->
    </div>
    <div class="clearfix"> </div>
</div>

