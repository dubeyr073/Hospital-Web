
@{
    ViewBag.Title = "Admin Profile";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    <script src="~/assets/admin/PageWiseJs/TestMaster.js"></script>
}

<script>
    $(document).ready(function () {
        hpldm.doctorMasterOnLoad();
    });
</script>

<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">
        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/home/dashboard">Test Master</a>
                <i class="fa fa-angle-right"></i>
                <span>Create Test</span>
            </h2>
        </div>
        <!--//banner-->
        <!--content-->
        <div class="blank">
            <div class="blank-page">
                @using (Html.BeginForm("ManageTestMaster", "admin", FormMethod.Post, new { enctype = "multipart/form-data", @id = "manage-test-form" }))
                {
                    <div class="col-lg-12"><p style="color:#ef0f44;text-align:center">@ViewBag.Msg</p></div>
                    <div class="clearfix"></div>
                    <input type="hidden" name="TestId" id="TestId" value="@ViewBag.TestId" />
                    <div class="col-md-6 form-group">
                        Test Name :
                        <input type="text" name="TestName" id="TestName" class="form-control" placeholder="Enter Test Name" required />
                    </div>
                    <div class="col-md-6 form-group">
                        Charge : <input type="number" name="Charge" id="Charge" class="form-control" placeholder="Enter Charge" required />
                    </div>
                    <div class="col-md-12 form-group">
                        <input type="checkbox" value=" IsDescription" name="IsDescription" id="IsDescription" class="form-control" />
                    </div>
                    <div class="col-md-12 form-group">
                        Description :
                        <input type="text" name="Description" id="Description" class="form-control" placeholder="Enter Description" />
                    </div>
                   
                    <div class="col-lg-4 form-group">
                        <br />
                        <button type="submit"  name="btnSubmit" id="btnSubmit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
            <div class="blank-page">
                @using (Html.BeginForm("ManageTestMaster", "admin", FormMethod.Post, new { enctype = "multipart/form-data", @id = "manage-testdetailes-form" }))
                {
                    <input type="hidden" name="TestDetailID" id="TestId" value="0" />
                    <div class="col-md-12 form-group">
                        Field Name :
                        <input type="text" name="FieldName" id="FieldName" class="form-control" placeholder="Enter Field Name" required />
                    </div>
                    <div class="col-md-12 form-group">
                        Field Default Value :
                        <input type="text" name="FieldDefaultValue" id="FieldDefaultValue" class="form-control" placeholder="Enter Default Value" required />
                    </div>
                    <div class="col-md-12 form-group">
                        Head Name :
                        <input type="number" name="HeadName" id="HeadName" class="form-control" placeholder="Enter Head Name" />
                    </div>
                    <div class="col-md-12 form-group">
                        Unit :
                        <input type="text" name="Unit" id="Unit" class="form-control" placeholder="Enter Unit" />
                    </div>
                    <div class="col-lg-4 form-group">
                        <br />
                        <button type="submit" name="btnAdd" id="btnAdd" class="btn btn-primary">Add</button>
                    </div>
                }
            </div>
            <div class="blank-page">
                <div id="TestmasterList"></div>
            </div>
        </div>
        <!--//content-->
        <!---->
    </div>
    <div class="clearfix"> </div>
</div>
