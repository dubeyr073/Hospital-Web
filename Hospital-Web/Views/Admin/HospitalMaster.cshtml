
@{
    ViewBag.Title = "Admin Profile";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    <script src="~/assets/admin/PageWiseJs/hospitalmaster.js"></script>
}

<script>
    $(document).ready(function () {
        hplhm.hospitalMasterOnLoad();
    });
</script>

<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">
        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/home/dashboard">Home</a>
                <i class="fa fa-angle-right"></i>
                <span>Hospital/PathLab</span>
            </h2>
        </div>
        <!--//banner-->
        <!--content-->
        <div class="blank">
            <div class="blank-page">
                @using (Html.BeginForm("managehospitalmaster", "admin", FormMethod.Post, new { enctype = "multipart/form-data", @id = "manage-hospital-form" }))
                {
                    <div class="col-lg-12"><p style="color:#ef0f44;text-align:center">@ViewBag.Msg</p></div>
                    <div class="clearfix"></div>
                    <input type="hidden" name="HospitalId" id="HospitalId" value="0" />
                    <div class="col-md-2 form-group">
                        Type :
                        <select id="Type" name="Type" required class="form-control">
                            <option value="0">Select Type</option>
                            <option value="1">Hospital and Pathlab</option>
                            <option value="2">Hospital</option>
                            <option value="3">Pathlab</option>
                        </select>
                    </div>
                    <div class="col-md-4 form-group">
                        Hospital Name :
                        <input type="text" name="HospitalName" id="HospitalName" class="form-control" placeholder="Enter Hospital Name" required />
                    </div>
                    <div class="col-md-6 form-group">
                        Full Address :
                        <input type="text" name="HospitalAddress" id="HospitalAddress" class="form-control" placeholder="Enter Hospital Address" required />
                    </div>
                    <div class="col-md-4 form-group">
                        Contact Number :
                        <input type="number" name="ContactNumber" id="ContactNumber" class="form-control" placeholder="Enter Contact Number" required />
                    </div>
                    <div class="col-md-4 form-group">
                        Email Id :
                        <input type="email" name="EmailId" id="EmailId" class="form-control" placeholder="Enter Email Id" required />
                    </div>
                    <div class="col-md-4 form-group">
                        Website Name :
                        <input type="text" name="WebsiteName" id="WebsiteName" class="form-control" placeholder="Enter Website Name" />
                    </div>
                    <div class="col-md-8 form-group">
                        Description :
                        <input type="text" name="Description" id="Description" class="form-control" placeholder="Enter Description" />
                    </div>
                    <div class="col-lg-4 form-group">
                        <br />
                        <button type="submit" name="btnSubmit" id="btnSubmit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
            <div class="blank-page">
                <div id="hospitalMasterList"></div>
            </div>
        </div>
        <!--//content-->
        <!---->
    </div>
    <div class="clearfix"> </div>
</div>

